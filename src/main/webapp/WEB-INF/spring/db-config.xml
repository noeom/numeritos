<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans
            http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- OrmLite connection sources -->
	
	<!-- Container defined data source -->
	<bean id="db.dataSource" class="org.springframework.jndi.JndiObjectFactoryBean">
	    <property name="jndiName" value="java:comp/env/jdbc/numeritos_db"/>
	</bean>

	<!-- ORMLite ConnectionSource -->
	<bean id="db.connectionSource" class="net.numeritos.db.factory.OrmLiteConnectionSourceFactory">
	    <property name="dataSource" ref="db.dataSource"/>
	</bean>
	
</beans>